<section class="cart py-16">
  <%if(session.cart) {%>
  <div class="order container mx-auto w-1/2">
    <div class="flex items-center border-b border-gray-300 pb-4">
      <img src="/img/cart-black.png" />
      <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
    </div>
    
    <div class="pizza-list">
      <%for(let dish of Object.values(session.cart.items)){ %>
      <div class="flex items-center my-8">
        <img class="w-10" src="/img/pizza.png" alt="pizza" />
        <div class="flex-1 ml-4">
          <h1><%=dish.item.name%></h1>
          <span><%=dish.item.size%></span>
        </div>
        <span class="flex-1"><%=dish.qty%> pcs</span>
        <span class="font-bold text-lg"
          >â‚¹<%= dish.qty * dish.item.price %></span
        >
        <button data-pizza="<%=JSON.stringify(dish)%>"
              class="inline-block px-4 py-2 rounded-full flex items-center remove-to-cart"
            >
              <img class="w-4" src="/img/delete.png" alt="cart"
            />

        
      </div>
      <% }%>
    </div>
    <hr />
    <div class="text-right py-1">
      <div>
        <span class="text-base">Sub Total:</span>
        <span class="text-base ml-2"
          >â‚¹<%=session.cart.totalPrice%></span
        >
      </div>
      <div>
        <span class="text-base ">Tax and Charges:</span>
        <span class="charges text-base ml-2"
          >â‚¹<%=session.cart.payableAmt - session.cart.totalPrice - session.cart.deliveryFee%></span
        >
      </div>
      <div>
        <span class="text-base ">Discount:</span>
        <span class="charges text-base ml-2 text-green"
          >0.0</span
        >
      <div>
        <span class="text-base">Delivery Fee:</span>
        <span class="text-base ml-2"
          >â‚¹<%=session.cart.deliveryFee%></span
        >
      </div>
      <div>

      </div>
      <hr class="py-2">
      <div>
        <span class="text-xl">Grand Total:</span>
        <span class="amount text-2xl font-bold ml-2"
          >â‚¹<%=session.cart.payableAmt%></span
        >
      </div>

      <div>
        <form action="" class="mt-12">
          <input
            class="border border-gray-400 p-2 w-1/2 mb-4"
            type="text"
            placeholder="Phone Number"
          />
          <input
            class="border border-gray-400 p-2 w-1/2"
            type="text"
            placeholder="Address"
          />
          <div>
            <% if(user) {%>
            <button
              class="px-6 py-2 rounded-full text-white font-bold mt-6 order-place"
              type="submit"
            >
              Order Place
            </button>
            <% } else { %>
             <button
              class="px-6 py-2 rounded-full text-white font-bold mt-6 order-place"
              type="submit"
            >
              Login to continue
            </button>
            <% } %>

           
          </div>
        </form>
      </div>
      
    </div>
  </div>
  <% } else { %>
  <div class="empty-cart py-16">
    <div class="container mx-auto text-center">
      <h1 class="text-3xl font-bold mb-2">Cart Empty ðŸ™‚</h1>
      <p class="text-gray-500 text-lg mb-12">
        You probably haven't ordered a pizza yet.<br />
        to order a pizza, go to the main page.
      </p>
      <img class="w-2/5 mx-auto" src="/img/empty-cart.png" alt="" />
      <a
        href="/"
        class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12"
      >
        Go back</a
      >
    </div>
  </div>
  <% } %>
</section>
